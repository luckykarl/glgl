<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_item"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x23"
        android:paddingRight="@dimen/x23">

        <com.guanshaoye.mylibrary.view.CircleImg
            android:id="@+id/img_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x32"
            android:layout_marginTop="@dimen/x32"
            android:src="@drawable/beauty2_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x23">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="轮滑"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/x27"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:text="轮滑3级"
                    android:textColor="@color/red_item"
                    android:textSize="@dimen/x23" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_green_item"
                android:paddingLeft="@dimen/x23"
                android:paddingRight="@dimen/x23"
                android:text="未签到"
                android:textColor="@color/white"
                android:textSize="@dimen/x19"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="@dimen/x134"
                android:layout_height="@dimen/x48"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="@dimen/x19" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x12"
        android:background="@color/whole_bg"/>

</LinearLayout>
