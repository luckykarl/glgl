<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x23">


        <com.guanshaoye.mylibrary.view.CircleImg
            android:id="@+id/img_teacher_head"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x100"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x23"
            android:src="@drawable/beauty2_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_teacher_head"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_store_name"
                style="@style/item_black_bold_text"
                android:text="江桥万达店"
                android:textSize="@dimen/x27" />

            <TextView
                android:id="@+id/tv_class_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x23"
                android:layout_marginTop="@dimen/x6"
                android:text="拉丁舞2级"
                android:textColor="@color/red"
                android:textSize="@dimen/x23" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x23"
                android:layout_marginTop="@dimen/x6"
                android:text="拉丁舞2级"
                android:textColor="@color/text_color"
                android:textSize="@dimen/x17" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_take_class_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/promote_success_icon"
                android:text="上课成功"
                android:textColor="@color/green"
                android:textSize="@dimen/x23"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_take_class_tiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x15"
                android:text="获得工资  ¥100"
                android:textColor="@color/red"
                android:textSize="@dimen/x19"
                android:textStyle="bold" />
        </LinearLayout>


    </RelativeLayout>

    <View style="@style/divider" />
</LinearLayout>
