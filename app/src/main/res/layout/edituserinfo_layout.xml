                    android:id="@+id/arrow8"
                    style="@style/personal_right_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x23"
                android:background="#ededed" />

            <RelativeLayout
                android:id="@+id/tv_birthday_lay"
