            </RelativeLayout>

            <View style="@style/divider" />

            <RelativeLayout
                android:id="@+id/tv_arrive_job_date_lay"
                style="@style/personal_info_rel">

                <TextView
                    style="@style/personal_left_txt"
                    android:text="@string/induation_time_txt" />

                <TextView
                    android:id="@+id/tv_arrive_job_date"
                    style="@style/personal_right_txt"
                    android:layout_toLeftOf="@+id/arrow19"
                    android:hint="未填" />

                <ImageView
                    android:id="@+id/arrow19"
                    style="@style/personal_right_arrow" />
            </RelativeLayout>

            <View style="@style/divider" />
            <TextView
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginLeft="@dimen/x23"
                android:layout_marginRight="@dimen/x23"
                android:layout_marginTop="@dimen/x50"
                android:layout_weight="0.7"
                android:background="@drawable/login_btn"
                android:gravity="center"
                android:text="下一步"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/x27" />
