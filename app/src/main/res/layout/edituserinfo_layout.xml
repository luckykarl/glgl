            <View style="@style/divider" />

            <RelativeLayout
                android:id="@+id/tv_graduate_date_lay"
                style="@style/personal_info_rel">

                <TextView
                    style="@style/personal_left_txt"
                    android:text="@string/graduation_time_txt" />

                <TextView
                    android:id="@+id/tv_graduate_date"
                    style="@style/personal_right_txt"
                    android:layout_toLeftOf="@+id/arrow18"
                    android:hint="未填" />

                <ImageView
