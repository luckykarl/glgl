            <View style="@style/divider" />

            <RelativeLayout
                android:id="@+id/tv_graduate_school_lay"
                style="@style/personal_info_rel">

                <TextView
                    style="@style/personal_left_txt"
                    android:text="@string/graduation_school_txt" />

                <TextView
                    android:id="@+id/tv_graduate_school"
                    style="@style/personal_right_txt"
                    android:layout_toLeftOf="@+id/arrow17"
