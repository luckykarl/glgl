<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/normal_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x140"
                android:background="@color/white"
                android:padding="@dimen/x23">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="头像"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/x29" />

                <com.guanshaoye.mylibrary.view.CircleImg
                    android:id="@+id/photo_img"
                    android:layout_width="@dimen/x90"
                    android:layout_height="@dimen/x90"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/head_icon" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x23"
                android:background="#ededed" />

            <RelativeLayout
                android:id="@+id/tv_name_lay"
                style="@style/personal_info_rel">

                <TextView
                    style="@style/personal_left_txt"
                    android:text="@string/name_txt" />

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/personal_right_txt"
                    android:layout_toLeftOf="@+id/arrow1"
                    android:hint="未填" />

                <ImageView
                    android:id="@+id/arrow1"
                    style="@style/personal_right_arrow" />
            </RelativeLayout>

            <View style="@style/divider" />

            <RelativeLayout
                android:id="@+id/tv_sex_lay"
                style="@style/personal_info_rel">

                <TextView
                    style="@style/personal_left_txt"
                    android:text="@string/gender_txt" />

                <TextView
                    android:id="@+id/tv_sex"
                    style="@style/personal_right_txt"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_toLeftOf="@+id/arrow2"
                    android:layout_toStartOf="@+id/arrow2"
                    android:hint="未填" />

                <ImageView
                    android:id="@+id/arrow2"
                    style="@style/personal_right_arrow" />
            </RelativeLayout>

            <View style="@style/divider" />

            <RelativeLayout
                android:id="@+id/tv_job_lay"
                style="@style/personal_info_rel">

                <TextView
                    style="@style/personal_left_txt"
                    android:text="@string/position_txt" />

                <TextView
                    android:id="@+id/tv_job"
                    style="@style/personal_right_txt"
                    android:layout_toLeftOf="@+id/arrow3"
                    />

                <ImageView
                    android:id="@+id/arrow3"
                    style="@style/personal_right_arrow" />
            </RelativeLayout>

            <View style="@style/divider" />

            <RelativeLayout
                android:id="@+id/tv_tel_lay"
                style="@style/personal_info_rel">

                <TextView
                    style="@style/personal_left_txt"
                    android:text="@string/contact_txt" />

                <TextView
                    android:id="@+id/tv_tel"
                    style="@style/personal_right_txt"
                    android:layout_toLeftOf="@+id/arrow4" />

                <ImageView
                    android:id="@+id/arrow4"
                    style="@style/personal_right_arrow" />
            </RelativeLayout>

            <View style="@style/divider" />

            <RelativeLayout
                android:id="@+id/tv_mail_lay"
                style="@style/personal_info_rel">

