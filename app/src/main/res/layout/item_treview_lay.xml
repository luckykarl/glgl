<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/x23"
        android:paddingRight="@dimen/x23">

        <com.guanshaoye.mylibrary.view.CircleImg
            android:id="@+id/img_teacher"
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/x90"
            android:layout_marginBottom="@dimen/x32"
            android:layout_marginTop="@dimen/x32"
            android:src="@drawable/beauty2_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x23"
            android:layout_toRightOf="@+id/img_teacher"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/store_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="轮滑"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/x27"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/levle_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:text="(1级)"
                        android:textColor="@color/color_b53131" />
                </LinearLayout>

                <TextView
                    android:id="@+id/time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00-11:00"
                    android:textColor="@color/color_777777"
                    android:textSize="@dimen/x23"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="老师"
                    android:textColor="@color/color_777777"
                    android:textSize="@dimen/x23" />

                <TextView
                    android:id="@+id/name_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_toRightOf="@+id/title_txt"
                    android:text="李建东"
                    android:textColor="@color/color_777777"
                    android:textSize="@dimen/x23" />

                <TextView
                    android:id="@+id/num_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_teacher"
                    android:layout_marginTop="@dimen/x10"
                    android:background="@drawable/shape_red_item"
                    android:paddingLeft="@dimen/x12"
                    android:paddingRight="@dimen/x12"
                    android:text="已预约   5／6"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x19" />


                <TextView
                    android:id="@+id/jump_txt"
                    android:layout_width="@dimen/x134"
                    android:layout_height="@dimen/x48"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_green_item"
                    android:gravity="center"
                    android:text="查看详情"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x19" />
            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>

    <View style="@style/divider" />

</LinearLayout>
