<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x39"
        android:paddingLeft="@dimen/x24"
        android:paddingRight="@dimen/x24">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="25"
                android:textColor="@color/text_color"
                android:textSize="@dimen/x39"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_day"
                android:gravity="center"
                android:text="April"
                android:textColor="@color/text_color"
                android:textSize="@dimen/x17" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:layout_marginLeft="@dimen/x50"
                android:background="@drawable/rob_class_shape">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x130"
                    android:text="10:00-11:00"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/x23"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/click_lay"
                    android:layout_width="@dimen/x99"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_rob_class"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/btn_rob_class"
                        android:layout_width="@dimen/x99"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:paddingLeft="@dimen/x15"
                        android:paddingRight="@dimen/x15"
                        android:text="@string/grap_class"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x28"
                        android:visibility="gone"/>
                    <ImageView
                        android:id="@+id/status_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ok_icon"
                        android:visibility="gone"/>
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x29"
                android:src="@drawable/time_icon" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
