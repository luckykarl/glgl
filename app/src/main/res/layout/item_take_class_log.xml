<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whole_bg"

    android:orientation="vertical">

    <RelativeLayout
        style="@style/item_rel"
        android:layout_marginBottom="@dimen/x12"
        android:layout_marginLeft="@dimen/x23"
        android:layout_marginRight="@dimen/x23">


        <com.guanshaoye.mylibrary.view.CircleImg
            android:id="@+id/img_teacher_head"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x100"
            android:src="@drawable/beauty2_icon" />

        <TextView
            android:id="@+id/tv_store_name"
            style="@style/item_black_bold_text"
            android:layout_toRightOf="@+id/img_teacher_head"
            android:text="江桥万达店"
            android:textColor="@color/text_color"
            android:textSize="@dimen/x27" />


        <TextView
            android:id="@+id/tv_class_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_store_name"
            android:layout_below="@+id/tv_store_name"
            android:layout_marginTop="@dimen/x15"
            android:text="拉丁舞2级"
            android:textColor="@color/red_item"
            android:textSize="@dimen/x23" />

        <TextView
            android:id="@+id/tv_take_class_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_class_rank"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/promote_success_icon"
            android:drawablePadding="@dimen/x8"
            android:text="上课成功"
            android:textColor="@color/green"
            android:textSize="@dimen/x23"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_store_name"
            android:layout_alignParentRight="true"
            android:text="11"
            android:textColor="@color/red_item"
            android:textSize="@dimen/x19" />
    </RelativeLayout>

</LinearLayout>
