<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whole_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/x23"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x76"
        android:paddingTop="@dimen/x71">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新闻公告"
            android:textColor="@color/text_color"
            android:textSize="@dimen/x27"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x23"
            android:text="1111"
            android:textColor="@color/text_color"
            android:textSize="@dimen/x23" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x71"
            android:layout_marginTop="@dimen/x20">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="sj"
                android:textColor="@color/red_item"
                android:textSize="@dimen/x19" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布人"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/x23"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x23"
                    android:text="管理员"
                    android:textColor="@color/color_767676"
                    android:textSize="@dimen/x23" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <View style="@style/divider" />
</LinearLayout>