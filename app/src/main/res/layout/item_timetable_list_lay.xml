<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x40"
        android:paddingRight="@dimen/x40">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x28"
            android:layout_marginBottom="@dimen/x28"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/timetable_icon"/>
                <TextView
                    android:id="@+id/data_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:text="08:00~09:00"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/x23" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x17"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/data_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_red_item"
                    android:paddingLeft="@dimen/x10"
                    android:paddingRight="@dimen/x10"
                    android:text="取消"
                    android:textSize="@dimen/x23"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/data_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="由于未达到最少上课人数3人"
                    android:layout_marginLeft="@dimen/x24"
                    android:textSize="@dimen/x23"
                    android:textColor="@color/text_color"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/click_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_green_item"
            android:text="查看详情"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:textSize="@dimen/x28"
            android:textColor="@color/white"
            android:visibility="gone"/>
    </RelativeLayout>
    <View style="@style/divider" />
</LinearLayout>